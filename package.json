{
  "name": "fcp-sfd-crm",
  "version": "0.1.0",
  "description": "CRM orchestration service for SFD (Single Front Door)",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "pretest": "npm run test:lint",
    "docker:debug": "docker compose -f compose.yml -f compose.debug.yml -p 'fcp-sfd-crm' up",
    "docker:test": "docker compose down -v && docker compose -f compose.yml -f compose.test.yml run  --build --rm 'fcp-sfd-crm'",
    "docker:test:watch": "docker compose down -v && docker compose -f compose.yml -f compose.test.yml -f compose.test.watch.yml run  --build --rm 'fcp-sfd-crm'",
    "test": "rm -rf ./coverage/** && vitest run --coverage",
    "test:watch": "vitest watch",
    "test:lint": "npx eslint",
    "start:watch": "nodemon --watch src --exec 'node --experimental-vm-modules src/index.js'",
    "start:debug": "nodemon --watch src --exec 'node --experimental-vm-modules --inspect-brk=0.0.0.0:9232 src/index.js'",
    "start": "node --experimental-vm-modules src/index.js"
  },
  "author": "Defra DDTS",
  "contributors": [
    "Rana Salem <rana.salem@defra.gov.uk>"
  ],
  "dependencies": {
    "@aws-sdk/client-sns": "3.975.0",
    "@defra/hapi-tracing": "1.0.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.3.12",
    "aws-embedded-metrics": "4.2.0",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "global-agent": "3.0.0",
    "hapi-pino": "12.1.0",
    "hapi-pulse": "3.0.1",
    "http-status-codes": "2.3.0",
    "https-proxy-agent": "7.0.5",
    "joi": "17.13.3",
    "mongo-locks": "3.0.2",
    "mongodb": "6.10.0",
    "node-fetch": "3.3.2",
    "pino": "9.5.0",
    "pino-pretty": "13.0.0",
    "undici": "7.18.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.1.4",
    "autoprefixer": "10.4.20",
    "neostandard": "0.12.1",
    "nodemon": "3.1.7",
    "npm-run-all": "4.1.5",
    "vitest": "3.1.4"
  },
  "overrides": {
    "fast-xml-parser": "5.3.4"
  }
}
